{
  "name": "rino",
  "version": "0.1.0",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "dev": "parcel packages/app/index.html",
    "build": "parcel build packages/app/index.html --public-url ./",
    "lint": "eslint --ext .js,.ts,.vue ./packages ./cypress",
    "test": "nyc mocha --require ts-node/register --require source-map-support/register --full-trace ./packages/**/*.test.ts ",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "coverage": "nyc report --reporter=text-lcov | COVERALLS_REPO_TOKEN=$COVERALLS_REPO_TOKEN coveralls"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "packages/**/*"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": true
  },
  "browserslist": [
    "> 0.2% and last 4 versions and not dead and not IE 11"
  ],
