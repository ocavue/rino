{
    "name": "rino",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "lint": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx'",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
        "postinstall": "./scripts/post-install.sh && husky install",
        "exec": "./scripts/recursive-exec.sh",
        "clean": "./scripts/clean.mjs"
    },
    "devDependencies": {
        "@lhci/cli": "^0.8.2",
        "@svgr/cli": "^5.5.0",
        "@types/jest": "^27.0.2",
        "@types/jest-image-snapshot": "^4.3.1",
        "@types/node": "^16.7.10",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.2",
        "jest": "^27.2.4",
        "jest-image-snapshot": "^4.5.1",
        "jest-playwright-preset": "^1.7.0",
        "jest-transform-stub": "^2.0.0",
        "playwright-chromium": "^1.15.1",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3",
        "ultra-runner": "^3.10.5"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":semanticCommitTypeAll(chore)"
        ],
        "packageRules": [
            {
                "groupName": "remirror packages",
                "matchPackagePatterns": [
                    ".*remirror.*"
                ],
                "stabilityDays": 0
            },
            {
                "groupName": "prosemirror packages",
                "matchPackagePatterns": [
                    ".*prosemirror.*"
                ],
                "stabilityDays": 0
            },
            {
                "groupName": "dependencies (non-major)",
                "excludePackagePatterns": [
                    ".*remirror.*",
                    ".*prosemirror.*"
                ],
                "matchUpdateTypes": [
                    "patch",
                    "minor"
                ],
                "schedule": [
                    "before 3am on Friday"
                ],
                "stabilityDays": 0
            }
        ],
        "prConcurrentLimit": 1,
        "stabilityDays": 7,
        "rangeStrategy": "bump",
        "dependencyDashboard": true
    },
    "pnpm": {
        "overrides": {}
    }
}