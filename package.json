{
    "name": "rino",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx'",
        "test": "jest --runInBand",
        "postinstall": "./scripts/post-install.sh",
        "exec": "./scripts/recursive-exec.sh",
        "build:website": "ultra exec web build && ultra exec home build"
    },
    "devDependencies": {
        "@lhci/cli": "^0.7.2",
        "@size-limit/file": "^4.11.0",
        "@svgr/cli": "^5.5.0",
        "@types/expect-puppeteer": "^4.4.5",
        "@types/jest": "^26.0.23",
        "@types/node": "^14.17.1",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^4.3.8",
        "jest": "^26.6.3",
        "jest-playwright-preset": "^1.6.0",
        "jest-transform-stub": "^2.0.0",
        "playwright": "^1.11.1",
        "prettier": "^2.3.0",
        "size-limit": "^4.11.0",
        "typescript": "~4.2.4",
        "ultra-runner": "^3.10.5"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":semanticCommitTypeAll(chore)"
        ],
        "postUpdateOptions": [
            "yarnDedupeHighest"
        ],
        "lockFileMaintenance": {
            "enabled": true,
            "extends": "schedule:monthly"
        },
        "packageRules": [
            {
                "groupName": "remirror packages",
                "packagePatterns": [
                    ".*remirror.*",
                    "jest-prosemirror"
                ],
                "allowedVersions": "/^.*pr706.[0-9]+$/"
            },
            {
                "groupName": "dependencies (non-major)",
                "excludePackagePatterns": [
                    ".*remirror.*",
                    "jest-prosemirror"
                ],
                "matchUpdateTypes": [
                    "patch",
                    "minor"
                ]
            }
        ],
        "ignoreDeps": [
            "@lhci/cli",
            "typescript",
            "webpack",
            "node"
        ],
        "rangeStrategy": "bump",
        "dependencyDashboard": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "./scripts/pre-commit.sh"
        }
    },
    "size-limit": [
        {
            "name": "editor",
            "path": "packages/editor/dist/**/*.{js,css,html}"
        },
        {
            "name": "web",
            "path": "packages/web/dist/**/*.{js,css,html}"
        },
        {
            "name": "home",
            "path": "packages/home/dist/**/*.{js,css,html}"
        }
    ],
    "//": [
        "jest-puppeteer: Requires Jest v22+ TypeScript users should additionally install `@types/puppeteer`, `@types/jest-environment-puppeteer` and `@types/expect-puppeteer`"
    ]
}
