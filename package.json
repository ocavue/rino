{
    "name": "rino",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "lint": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx'",
        "fix": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx' --fix .",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage",
        "postinstall": "./scripts/post-install.sh && husky install",
        "clean": "./scripts/clean.mjs"
    },
    "devDependencies": {
        "@lhci/cli": "^0.9.0",
        "@svgr/cli": "^6.2.1",
        "@types/jest": "^27.4.1",
        "@types/jest-image-snapshot": "^4.3.1",
        "@types/node": "^16.11.27",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.1.4",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-hooks": "^4.4.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-image-snapshot": "^4.5.1",
        "jest-playwright-preset": "^1.7.0",
        "jest-transform-stub": "^2.0.0",
        "playwright-chromium": "^1.21.1",
        "prettier": "^2.6.2",
        "ts-jest": "^27.1.4",
        "typescript": "^4.6.3"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":semanticCommitTypeAll(chore)"
        ],
        "packageRules": [
            {
                "groupName": "dependencies (non-major)",
                "matchUpdateTypes": [
                    "patch",
                    "minor"
                ],
                "schedule": [
                    "before 3am on Friday"
                ],
                "stabilityDays": 0
            }
        ],
        "ignoreDeps": [],
        "prConcurrentLimit": 1,
        "stabilityDays": 7,
        "rangeStrategy": "bump",
        "dependencyDashboard": true
    },
    "pnpm": {
        "overrides": {
            "@electron/universal": "^1.2.1"
        }
    }
}
