{
    "name": "rino",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx'",
        "test": "jest --runInBand",
        "build:all": "yarn run home build && yarn run web build && yarn run web export",
        "home": "yarn workspace @rino.app/home",
        "web": "yarn workspace @rino.app/web"
    },
    "devDependencies": {
        "@changesets/cli": "^2.9.2",
        "@lhci/cli": "^0.4.4",
        "@types/expect-puppeteer": "^4.4.3",
        "@types/jest": "^26.0.10",
        "@types/puppeteer": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "husky": "^4.2.5",
        "jest": "^26.4.0",
        "jest-transform-stub": "^2.0.0",
        "prettier": "^2.0.5",
        "typescript": "^3.9.7"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":semanticCommitTypeAll(chore)"
        ],
        "postUpdateOptions": [
            "yarnDedupeFewer"
        ],
        "lockFileMaintenance": {
            "enabled": true,
            "extends": "schedule:monthly"
        },
        "packageRules": [
            {
                "packagePatterns": [".*remirror.*", "jest-prosemirror"],
                "groupName": "remirror packages"
            },
            {
                "depTypeList": [
                    "dependencies",
                    "devDependencies"
                ],
                "updateTypes": [
                    "patch",
                    "minor"
                ],
                "excludePackagePatterns": [".*remirror.*", "jest-prosemirror"],
                "groupName": "dependencies (non-major)"
            }
        ],
        "ignoreDeps": [
            "@changesets/cli",
            "node"
        ],
        "rangeStrategy": "bump"
    },
    "husky": {
        "hooks": {
            "pre-commit": "./scripts/pre-commit.sh"
        }
    },
    "//": [
        "jest-puppeteer: Requires Jest v22+ TypeScript users should additionally install `@types/puppeteer`, `@types/jest-environment-puppeteer` and `@types/expect-puppeteer`"
    ]
}
