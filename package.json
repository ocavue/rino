{
    "name": "rino",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "update-deps": "pnpm -r update --depth Infinity --ignore-scripts",
        "lint": "eslint --ignore-path .gitignore --ext '.js,.jsx,.ts,.tsx'",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
        "postinstall": "./scripts/post-install.sh && husky install",
        "exec": "./scripts/recursive-exec.sh",
        "clean": "./scripts/clean.mjs"
    },
    "devDependencies": {
        "@lhci/cli": "^0.8.0",
        "@svgr/cli": "^5.5.0",
        "@types/jest": "^27.0.1",
        "@types/jest-image-snapshot": "^4.3.1",
        "@types/node": "^16.7.4",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "eslint": "^7.32.0",
        "eslint-config-next": "^11.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.2",
        "jest": "^27.1.0",
        "jest-image-snapshot": "^4.5.1",
        "jest-playwright-preset": "^1.7.0",
        "jest-transform-stub": "^2.0.0",
        "js-yaml": "^4.1.0",
        "playwright-chromium": "^1.14.1",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.2",
        "ultra-runner": "^3.10.5"
    },
    "renovate": {
        "extends": [
            "config:base",
            ":semanticCommitTypeAll(chore)"
        ],
        "lockFileMaintenance": {
            "enabled": true,
            "extends": "schedule:monthly"
        },
        "packageRules": [
            {
                "groupName": "remirror packages",
                "matchPackagePatterns": [
                    ".*remirror.*"
                ],
                "stabilityDays": 0
            },
            {
                "groupName": "prosemirror packages",
                "matchPackagePatterns": [
                    ".*prosemirror.*"
                ],
                "stabilityDays": 0
            },
            {
                "groupName": "dependencies (non-major)",
                "excludePackagePatterns": [
                    ".*remirror.*",
                    ".*prosemirror.*"
                ],
                "matchUpdateTypes": [
                    "patch",
                    "minor"
                ],
                "schedule": [
                    "before 2am on Monday"
                ],
                "stabilityDays": 0
            }
        ],
        "ignoreDeps": [],
        "prCreation": "not-pending",
        "stabilityDays": 7,
        "rangeStrategy": "bump",
        "dependencyDashboard": true
    },
    "pnpm": {
        "overrides": {}
    }
}