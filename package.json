    "@typescript-eslint/parser": "^1.9.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "cypress": "^3.4.0",
