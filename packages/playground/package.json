{
    "name": "@rino.app/playground",
    "version": "0.0.0",
    "private": true,
    "license": "GPL-3.0",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "run-s _dep _dev",
        "preview": "vite preview --port 3001",
        "build": "run-s _dep _build",
        "test:vitest": "pnpm build && vitest run --no-threads",
        "test:vitest:dev": "pnpm build && vitest dev --no-threads",
        "test:vitest:coverage": "pnpm build && vitest run --no-threads --coverage",
        "_dep": "pnpm -F '@rino.app/playground^...' build",
        "_dev": "vite dev --clearScreen=false",
        "_build": "vite build"
    },
    "devDependencies": {
        "@rino.app/editor": "workspace:*",
        "@vitejs/plugin-react": "^1.3.2",
        "c8": "^7.11.2",
        "jest-remirror": "^1.0.41",
        "lodash-es": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "playwright-chromium": "^1.21.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "typescript": "^4.6.4",
        "v8-to-istanbul": "^9.0.0",
        "vite": "^2.9.8",
        "vitest": "^0.12.4"
    },
    "browserslist": [
        "> 1%",
        "not dead",
        "not op_mini all"
    ],
    "publishConfig": {
        "access": "public"
    }
}
