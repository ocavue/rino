{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "baseUrl": ".",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "isolatedModules": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "next-env.d.ts",
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".next",
        "coverage"
    ],
}