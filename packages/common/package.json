{
    "name": "@rino.app/common",
    "version": "0.0.0",
    "private": true,
    "license": "GPL-3.0",
    "type": "module",
    "main": "dist/rino-common.mjs",
    "module": "dist/rino-common.mjs",
    "types": "dist-types/index.d.ts",
    "scripts": {
        "test:vitest": "vitest run",
        "test:vitest:dev": "vitest dev",
        "test:vitest:coverage": "vitest run --coverage",
        "dev": "esbuild --bundle src/index.ts --outfile=dist/rino-common.mjs --format=esm --watch",
        "build": "esbuild --bundle src/index.ts --outfile=dist/rino-common.mjs --format=esm",
        "bundle:dts": "tsc -b src/tsconfig.json && api-extractor run --verbose"
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.25.0",
        "esbuild": "^0.14.42",
        "typescript": "^4.7.3",
        "vitest": "^0.14.1"
    }
}
