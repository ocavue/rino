{
    "name": "@rino.app/electron",
    "version": "0.0.0",
    "private": true,
    "main": "src/main/dist/main.js",
    "author": "ocavue",
    "description": "A better way to write Markdown",
    "scripts": {
        "dev": "run-p dev:main dev:renderer dev:electron ",
        "dev:main": "tsc --project src/main/tsconfig.json --watch",
        "dev:renderer": "vite src/renderer",
        "dev:electron": "wait-on --timeout 60000 tcp:3002 && wait-on --timeout 60000 src/main/dist/main.js && NODE_ENV=development electron .",
        "build": "run-s build:main build:renderer build:electron",
        "build:main": "tsc --project src/main/tsconfig.json",
        "build:renderer": "vite build src/renderer",
        "build:electron": "electron-builder --mac --x64 --publish never"
    },
    "devDependencies": {
        "@types/react": "^17.0.4",
        "@types/react-dom": "^17.0.3",
        "@vitejs/plugin-react-refresh": "^1.3.3",
        "cross-env": "^7.0.3",
        "electron": "12.0.6",
        "electron-builder": "^22.10.5",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.4",
        "vite": "^2.2.3",
        "wait-on": "^5.3.0"
    },
    "dependencies": {
        "@rino.app/editor": "0.0.0",
        "electron-log": "^4.3.5",
        "electron-updater": "^4.3.8",
        "lodash": "^4.17.21",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "unstated-next": "^1.1.0"
    },
    "engines": {
        "node": ">= 14"
    },
    "files": [
        "this_file_dose_not_exist"
    ],
    "homepage": "https://rino.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/ocavue/rino.git",
        "directory": "packages/web"
    },
    "publishConfig": {
        "access": "public"
    }
}
