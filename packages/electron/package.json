{
    "name": "@rino.app/electron",
    "version": "0.0.0",
    "private": true,
    "main": "./main/dist/main.js",
    "author": "ocavue",
    "description": "A better way to write Markdown",
    "scripts": {
        "dev": "run-p dev:main dev:renderer dev:preload dev:electron",
        "dev:main": "tsc --build --watch ./main/tsconfig.json",
        "dev:preload": "tsc --build --watch ./preload/tsconfig.json",
        "dev:renderer": "tsc --build ./renderer/tsconfig.json && vite ./renderer",
        "dev:electron": "wait-on --timeout 60000 tcp:3004 && wait-on --timeout 60000 ./main/dist/main.js && wait-on --timeout 60000 ./preload/dist/index.js && NODE_ENV=development electron .",
        "build": "run-s -l -n build:main build:renderer build:preload build:electron:dir",
        "build:all": "run-s -l -n build:main build:renderer build:preload build:electron:all",
        "build:main": "tsc --build ./main/tsconfig.json",
        "build:preload": "tsc --build ./preload/tsconfig.json",
        "build:renderer": "tsc --build ./renderer/tsconfig.json && vite build ./renderer",
        "build:electron": "electron-builder -p never",
        "build:electron:dir": "electron-builder -p never --dir",
        "build:electron:all": "electron-builder -p never --mac --win --linux"
    },
    "devDependencies": {
        "@rino.app/common": "workspace:0.0.0",
        "@rino.app/editor": "workspace:0.0.0",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@vitejs/plugin-react-refresh": "^1.3.5",
        "cross-env": "^7.0.3",
        "electron": "13.1.7",
        "electron-builder": "^22.11.7",
        "electron-notarize": "^1.0.0",
        "lodash-es": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.3.5",
        "unstated-next": "^1.1.0",
        "vite": "^2.4.3",
        "wait-on": "^6.0.0"
    },
    "dependencies": {
        "electron-log": "^4.3.5",
        "electron-updater": "^4.3.9"
    },
    "files": [
        "this_file_dose_not_exist"
    ],
    "homepage": "https://rino.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/ocavue/rino.git",
        "directory": "packages/web"
    },
    "publishConfig": {
        "access": "public"
    }
}
