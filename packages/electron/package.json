{
    "name": "@rino.app/electron",
    "version": "0.0.0",
    "private": true,
    "main": "./assets/electron-main/dist/main.js",
    "author": "ocavue",
    "description": "A better way to write Markdown",
    "scripts": {
        "dev": "build/copy-dist.sh && wait-on --timeout 60000 tcp:3004 && NODE_ENV=development electron .",
        "build:dir": "build/copy-dist.sh --prod && electron-builder -p never --dir",
        "build:all": "build/copy-dist.sh --prod && electron-builder -p never --mac --win --linux"
    },
    "devDependencies": {
        "electron": "13.1.7",
        "electron-builder": "^22.11.7",
        "electron-notarize": "^1.0.0",
        "wait-on": "^6.0.0"
    },
    "dependencies": {
        "@rino.app/electron-main": "workspace:0.0.0",
        "@rino.app/electron-preload": "workspace:0.0.0"
    }
}
