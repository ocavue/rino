{
    "name": "@rino.app/electron",
    "version": "0.0.0",
    "main": "src/main/dist/main.js",
    "author": "ocavue",
    "description": "A better way to write Markdown",
    "scripts": {
        "dev": "run-p dev:main dev:renderer dev:electron ",
        "dev:main": "tsc --project src/main/tsconfig.json --watch",
        "dev:renderer": "vite src/renderer",
        "dev:electron": "wait-on tcp:3002 && wait-on src/main/dist/main.js && NODE_ENV=development electron .",
        "build": "run-s build:main build:renderer build:electron",
        "build:main": "tsc --project src/main/tsconfig.json",
        "build:renderer": "vite build src/renderer",
        "build:electron": "electron-builder build --config electron-builder.config.js --dir --mac",
        "publish": "electron-builder --publish"
    },
    "devDependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "cross-env": "^7.0.3",
        "electron": "12.0.2",
        "electron-builder": "^22.10.5",
        "npm-run-all": "^4.1.5",
        "typescript": "^4.2.3",
        "vite": "^2.1.3",
        "wait-on": "^5.3.0"
    },
    "dependencies": {
        "@rino.app/editor": "^0.3.0",
        "electron-updater": "^4.3.8",
        "lodash": "^4.17.21",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "unstated-next": "^1.1.0"
    },
    "engines": {
        "node": ">=v14.16.0"
    }
}
