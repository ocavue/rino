{
    "$schema": "https://turborepo.org/schema.json",
    "baseBranch": "origin/master",
    "pipeline": {
        "build": {
            "dependsOn": ["build:api-extractor", "build:esbuild", "^build"],
            "outputs": ["dist/**"]
        },
        "build:esbuild": {
            "dependsOn": [],
            "outputs": ["dist/**/*.js", "dist/**/*.mjs", "dist/**/*.cjs"]
        },
        "build:tsc": {
            "dependsOn": ["^build:tsc"],
            "outputs": ["dist-types"]
        },
        "build:api-extractor": {
            "dependsOn": ["build:tsc"],
            "outputs": ["dist/**/*.d.ts"]
        },

        "build:linux": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "build:mac": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "build:win": {
            "dependsOn": ["^build"],
            "outputs": []
        },

        "dev": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "preview": {
            "dependsOn": ["^build"]
        },

        "test:vitest": {
            "dependsOn": ["^build"]
        },
        "test:vitest:dev": {
            "dependsOn": ["^build"]
        },
        "test:vitest:coverage": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**", "coverage-e2e/**"]
        },

        "@rino.app/playground#test:vitest": {
            "dependsOn": ["build"]
        },
        "@rino.app/playground#test:vitest:dev": {
            "dependsOn": ["build"]
        },
        "@rino.app/playground#test:vitest:coverage": {
            "dependsOn": ["build"],
            "outputs": ["coverage/**", "coverage-e2e/**"]
        }
    }
}
