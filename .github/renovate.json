{
    "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)"
    ],
    "packageRules": [
        {
            "groupName": "remirror packages",
            "matchPackagePatterns": [
                ".*remirror.*"
            ],
            "stabilityDays": 0
        },
        {
            "groupName": "prosemirror packages",
            "matchPackagePatterns": [
                ".*prosemirror.*"
            ],
            "stabilityDays": 0
        },
        {
            "groupName": "dependencies (non-major)",
            "excludePackagePatterns": [
                ".*remirror.*",
                ".*prosemirror.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "schedule": [
                "before 3am on Friday"
            ],
            "stabilityDays": 0
        }
    ],
    "prConcurrentLimit": 1,
    "stabilityDays": 7,
    "rangeStrategy": "bump",
    "dependencyDashboard": true
}