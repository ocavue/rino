{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "sourceMap": true, // Generates `.js.map` file.
        "declaration": true, // Generates `.d.ts` file.
        "declarationMap": true, // Generates `.d.ts.map` file. This allow you to jump to `.ts` file instead of `.d.ts` file when doing "Go to Definition" in supported editors.
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
}