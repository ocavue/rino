{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noEmit": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
}