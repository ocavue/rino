{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "allowJs": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*",
        "tests/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}